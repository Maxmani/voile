  "authors": [
    "Maxmani"
  ],
  "contributors": [
    "wasa",
    "yumio"
  ],
  "contact": {
    "sources": "https://github.com/Maxmani/voile",
    "issues": "https://github.com/Maxmani/voile/issues"
  },
  "license": "LGPL-3.0-or-later",
  "icon": "assets/voile/icon.png",
